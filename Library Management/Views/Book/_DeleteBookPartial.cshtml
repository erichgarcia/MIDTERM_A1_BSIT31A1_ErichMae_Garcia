@model Library_Management.Models.DeleteBookViewModel

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Delete Book</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <p>Are you sure you want to delete the book <strong>@Model.Title</strong> by <strong>@Model.AuthorName</strong>?</p>
</div>
<div class="modal-footer">
    <form id="deleteBookForm" asp-action="DeleteConfirmed" asp-route-id="@Model.BookId" method="post">
        @Html.AntiForgeryToken()
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>
